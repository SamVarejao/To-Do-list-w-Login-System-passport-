head
    title= Register
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    style 
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&family=Roboto&display=swap")
        include ../includes/profileStyle.css

body
    div(class="mainContainer")
        div(class="dashboard")
            h1(class="header") Welcome #{user}

            form(action="/profile", method="post")
                
                label(for="content") To do:
                input(type="text", name="content" maxlength="40")
        
                label(for="timeLimit") Due:
                input(type="date", name="timeLimit")

                input(type="submit", value="Add to list", class="button")
            div(class="button") 
                a(href="/logout", class="removeUnderline") Logout
            p#pug-variable=errors

        div(class="toDoList")
            ul
            each post in postPlace
                a(class="removeUnderline" ,href="profile/"+ post.id)
                    li To do: #{post.content}  ‚è≥ Due:  #{post.timeLimit.toDateString()}


    